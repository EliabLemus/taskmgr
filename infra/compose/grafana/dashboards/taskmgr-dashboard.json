{
  "title": "Task Manager API Metrics",
  "tags": ["taskmgr", "django"],
  "timezone": "browser",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(django_http_requests_total_by_view_transport_method_total[5m])",
          "legendFormat": "{{method}} {{view}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Response Time (p95)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(django_http_requests_latency_seconds_by_view_method_bucket[5m]))",
          "legendFormat": "{{method}} {{view}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Error Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(django_http_requests_total_by_view_transport_method_total{status=~\"5..\"}[5m])",
          "legendFormat": "5xx errors"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "Active Connections",
      "type": "graph",
      "targets": [
        {
          "expr": "django_http_requests_total_by_view_transport_method_total",
          "legendFormat": "Total requests"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "title": "Success Rate (%)",
      "type": "gauge",
      "targets": [
        {
          "expr": "(sum(rate(django_http_requests_total_by_method_total{status=~\"2..\"}[1m])))/(sum(rate(django_http_requests_total_by_method_total[1m])))*100",
          "legendFormat": "Success %"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 16 },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 95 },
              { "color": "green", "value": 99 }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Error Rate (%)",
      "type": "graph",
      "targets": [
        {
          "expr": "100 * sum(rate(django_http_requests_total_by_method_total{status=~\"5..|4..\"}[1m])) / sum(rate(django_http_requests_total_by_method_total[1m]))",
          "legendFormat": "Error %"
        },
        {
          "expr": "1",
          "legendFormat": "SLO (1%)",
          "refId": "B"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 16 }
    },
    {
      "id": 7,
      "title": "Latency p95 (ms)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(django_http_request_duration_seconds_bucket[1m])) * 1000",
          "legendFormat": "p95 latency"
        },
        {
          "expr": "500",
          "legendFormat": "SLO (500 ms)",
          "refId": "B"
        }
      ],
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 16 }
    }
  ]
}
